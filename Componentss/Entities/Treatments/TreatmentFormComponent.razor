@using MudBlazor
@inherits TreatmentFormViewModel

<MudDialog Style="width:inherit">
    <DialogContent>
        <MudCard>
            <MudCardContent>
                <MudItem xs="12">
                    <!-- Treatment Name -->
                    <MudTextField Label="Treatment Name" Variant="Variant.Outlined" Immediate="true"
                                  Required="true" RequiredError="@ValidationMessage"
                                  @bind-Value="TreatmentDto.Name" />

                    <!-- Description -->
                    <MudTextField Label="Description" Variant="Variant.Outlined" Immediate="true"
                                  Required="true" RequiredError="@ValidationMessage"
                                  @bind-Value="TreatmentDto.Description" />

                    <!-- Price -->
                    <MudNumericField Label="Price" Variant="Variant.Outlined" Immediate="true"
                                     Required="true" RequiredError="@ValidationMessage"
                                     @bind-Value="TreatmentDto.Price" />

                    <!-- Duration -->
                    <MudNumericField Label="Duration (in minutes)" Variant="Variant.Outlined" Immediate="true"
                                     Required="true" RequiredError="@ValidationMessage"
                                     @bind-Value="TreatmentDto.Duration" />
                </MudItem>
            </MudCardContent>
        </MudCard>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Tertiary" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Disabled="@Disabled" Variant="Variant.Filled" Color="Color.Tertiary" OnClick="CreateOrUpdate">Save</MudButton>
    </DialogActions>
</MudDialog>
