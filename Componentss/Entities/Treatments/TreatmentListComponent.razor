@using MudBlazor
@inherits TreatmentListViewModel

<MudTable Class="ml-4 mt-4 mr-4" Elevation="4" Items="@Treatments" Dense Hover="true" Bordered="false" Filter="new Func<TreatmentDto, bool>(FilterFunc)" Loading="@Loading">
    <ToolBarContent>
        <MudButton StartIcon="@Icons.Material.Filled.Add" Color="Color.Tertiary" Variant="Variant.Outlined" style="font-weight: bold;" OnClick="@(() => CreateOrUpdateTreatment(new TreatmentDto()))">
            Create new Treatment
        </MudButton>
        <MudSpacer />
        <MudTextField T="string" Label="Search" Variant="Variant.Outlined" @bind-Value="SearchTreatmentName" Clearable="true" Immediate="true" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Outlined.Search"></MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col />
        <col />
        <col style="width:2px;" />
        <col style="width:2px;" />
    </ColGroup>
    <HeaderContent>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;">Name</MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;">Description</MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;"></MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;"></MudTh>
    </HeaderContent>
    <RowTemplate Context="treatment">
        <MudTd DataLabel="Name">@treatment.Name</MudTd>
        <MudTd DataLabel="Description">@treatment.Description</MudTd>
        <MudTd DataLabel="Update">
            <MudTooltip Text="Update">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => CreateOrUpdateTreatment(treatment))" />
            </MudTooltip>
        </MudTd>
        <MudTd DataLabel="Delete">
            <MudTooltip Text="Delete">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Primary" Size="Size.Small" OnClick="@(() => DeleteTreatment(treatment))" />
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No treatments found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager RowsPerPageString="Items per page" InfoFormat="@InfoFormat" />
    </PagerContent>
</MudTable>
