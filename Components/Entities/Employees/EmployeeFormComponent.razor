@using MudBlazor
@inherits EmployeeFormViewModel

@if (EmployeeCreate != null && EmployeeCreate.EmployeeId == 0)
{
    <MudDialog Style="width:inherit">
        <DialogContent>
            <MudCard>
                <MudCardContent>
                    <MudItem xs="12">
                        <MudTextField Label="First Name" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeCreate.FirstName" For="@(() => EmployeeCreate.FirstName)" />

                        <MudTextField Label="Last Name" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeCreate.LastName" For="@(() => EmployeeCreate.LastName)" />

                        <MudTextField Label="Mobile Number" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeCreate.MobileNumber" For="@(() => EmployeeCreate.MobileNumber)" />

                        <MudTextField Label="Email" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeCreate.Email" For="@(() => EmployeeCreate.Email)" />

                        <MudTextField Label="Specialization" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeCreate.Specialization" For="@(() => EmployeeCreate.Specialization)" />
                    </MudItem>
                </MudCardContent>
            </MudCard>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Tertiary" Variant="Variant.Filled" OnClick="() => Cancel()">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Disabled="@Disabled" Variant="Variant.Filled" Color="Color.Tertiary" OnClick="() => CreateOrUpdate()">Save</MudButton>
        </DialogActions>
    </MudDialog>
}
else
{
    <MudDialog Style="width:inherit">
        <DialogContent>
            <MudCard>
                <MudCardContent>
                    <MudItem xs="12">
                        <MudTextField Label="First Name" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeUpdate.FirstName" For="@(() => EmployeeUpdate.FirstName)" />

                        <MudTextField Label="Last Name" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeUpdate.LastName" For="@(() => EmployeeUpdate.LastName)" />

                        <MudTextField Label="Mobile Number" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeUpdate.MobileNumber" For="@(() => EmployeeUpdate.MobileNumber)" />

                        <MudTextField Label="Email" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeUpdate.Email" For="@(() => EmployeeUpdate.Email)" />

                        <MudTextField Label="Position" Variant="Variant.Outlined" Immediate=true Required RequiredError=@ValidationMessage
                                      @bind-Value="EmployeeUpdate.Specialization" For="@(() => EmployeeUpdate.Specialization)" />
                    </MudItem>
                </MudCardContent>
            </MudCard>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Tertiary" Variant="Variant.Filled" OnClick="() => Cancel()">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Disabled="@Disabled" Variant="Variant.Filled" Color="Color.Tertiary" OnClick="() => CreateOrUpdate()">Save</MudButton>
        </DialogActions>
    </MudDialog>
}
