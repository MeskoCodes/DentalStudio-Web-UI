@inherits PatientListViewModel

<MudTable Class="ml-4 mt-4 mr-4" Elevation="4" Items="@Patients" Dense Hover="true" Bordered="false" Filter="new Func<PatientDto, bool>(FilterFunc)" Loading="@Loading">
    <ToolBarContent>
        <MudButton StartIcon="@Icons.Material.Filled.Add" Color="Color.Tertiary" Variant="Variant.Outlined" style="font-weight: bold;" OnClick="@(() => CreateOrUpdatePatient(new PatientDto()))">
            Create new Patient
        </MudButton>
        <MudSpacer />
        <MudTextField T="string" Label="Search" Variant="Variant.Outlined" @bind-Value="SearchPatientName" Clearable="true" Immediate="true" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Outlined.Search"></MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col />
        <col />
        <col />
        <col style="width:2px;" />
        <col style="width:2px;" />
    </ColGroup>
    <HeaderContent>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;">First Name</MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;">Last Name</MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;">Email</MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;"></MudTh>
        <MudTh style="color:var(--mud-palette-primary); font-weight: bold;"></MudTh>
    </HeaderContent>
    <RowTemplate Context="patient">
        <MudTd DataLabel="First Name">@patient.FirstName</MudTd>
        <MudTd DataLabel="Last Name">@patient.LastName</MudTd>
        <MudTd DataLabel="Email">@patient.Email</MudTd>
        <MudTd DataLabel="Update">
            <MudTooltip Text="Update">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => CreateOrUpdatePatient(patient))" />
            </MudTooltip>
        </MudTd>
        <MudTd DataLabel="Delete">
            <MudTooltip Text="Delete">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Primary" Size="Size.Small" OnClick="@(() => DeletePatient(patient))" />
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No patients found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager RowsPerPageString="Items per page" InfoFormat="@InfoFormat" />
    </PagerContent>
</MudTable>
